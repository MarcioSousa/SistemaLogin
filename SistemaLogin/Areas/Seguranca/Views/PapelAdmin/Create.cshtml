@model SistemaLogin.Areas.Seguranca.Data.Papel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            Registro de um NOVO PAPEL
        </div>
        <br />
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Nome</label>
                        <input name="nome" value="@Model" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="container">
            <div class="row">
                <div class="col d-grid gap-2">
                    @Html.ActionLink("Retornar para a listagem de PAPÉIS", "Index", null, new { @class = "btn btn-default" })
                </div>
                <div class="col d-grid gap-2">
                    <input type="submit" value="Adicionar Papel" class="btn btn-danger" />
                </div>
            </div>
        </div>
        <br/>
    </div>
}